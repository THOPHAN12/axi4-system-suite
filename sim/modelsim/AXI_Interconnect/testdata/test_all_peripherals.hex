@00000000
// ============================================================================
// RV32I Test Program - ALL 4 SLAVES (RAM, GPIO, UART, SPI)
// ============================================================================
// Address Map (based on ARADDR[31:30]):
//   Slave0 (RAM):  0x00000000 - 0x3FFFFFFF  (bits 31:30 = 00)
//   Slave1 (GPIO): 0x40000000 - 0x7FFFFFFF  (bits 31:30 = 01)
//   Slave2 (UART): 0x80000000 - 0xBFFFFFFF  (bits 31:30 = 10)
//   Slave3 (SPI):  0xC0000000 - 0xFFFFFFFF  (bits 31:30 = 11)
// ============================================================================

13 00 00 00  // nop

// Initialize base pointers using LUI (Load Upper Immediate)
37 05 00 40  // lui x10, 0x40000  → x10 = 0x40000000 (GPIO base)
37 06 00 80  // lui x11, 0x80000  → x11 = 0x80000000 (UART base)
37 07 00 C0  // lui x12, 0xC0000  → x12 = 0xC0000000 (SPI base)
37 08 00 00  // lui x13, 0x00000  → x13 = 0x00000000 (RAM base)
13 08 08 10  // addi x13, x13, 0x100 → x13 = 0x00000100 (RAM data area)

// Test data values
13 09 50 0A  // li x14, 0xA5 (test pattern 1)
93 09 A0 05  // li x15, 0x5A (test pattern 2)

// ============================================================================
// TEST 1: Write to RAM (Slave0) - 0x00000100
// ============================================================================
23 20 E6 00  // sw x14, 0(x13)     @ 0x00000100 → Slave0
23 22 F6 00  // sw x15, 4(x13)     @ 0x00000104 → Slave0

// ============================================================================
// TEST 2: Read from RAM (Slave0)
// ============================================================================
03 2A 06 00  // lw x16, 0(x13)     @ 0x00000100 → Slave0
83 2A 46 00  // lw x17, 4(x13)     @ 0x00000104 → Slave0

// ============================================================================
// TEST 3: Write to GPIO (Slave1) - 0x40000000
// ============================================================================
23 20 E5 00  // sw x14, 0(x10)     @ 0x40000000 → Slave1 (GPIO out)
23 22 F5 00  // sw x15, 4(x10)     @ 0x40000004 → Slave1 (GPIO dir)

// ============================================================================
// TEST 4: Read from GPIO (Slave1)
// ============================================================================
03 2B 85 00  // lw x18, 8(x10)     @ 0x40000008 → Slave1 (GPIO in)

// ============================================================================
// TEST 5: Write to UART (Slave2) - 0x80000000
// ============================================================================
23 20 E5 00  // sw x14, 0(x11)     @ 0x80000000 → Slave2 (UART TX)
23 22 F5 00  // sw x15, 4(x11)     @ 0x80000004 → Slave2 (UART control)

// ============================================================================
// TEST 6: Read from UART (Slave2)
// ============================================================================
83 2B 85 00  // lw x19, 8(x11)     @ 0x80000008 → Slave2 (UART status)

// ============================================================================
// TEST 7: Write to SPI (Slave3) - 0xC0000000
// ============================================================================
23 20 E6 00  // sw x14, 0(x12)     @ 0xC0000000 → Slave3 (SPI data)
23 22 F6 00  // sw x15, 4(x12)     @ 0xC0000004 → Slave3 (SPI control)

// ============================================================================
// TEST 8: Read from SPI (Slave3)
// ============================================================================
03 2C 86 00  // lw x20, 8(x12)     @ 0xC0000008 → Slave3 (SPI status)
83 2C C6 00  // lw x21, 12(x12)    @ 0xC000000C → Slave3 (SPI RX)

// ============================================================================
// Verification values
// ============================================================================
93 0C 00 0A  // li x22, 10  (expect 10 data operations)
13 0D 00 04  // li x23, 4   (expect 4 slaves accessed)

// ============================================================================
// DONE - Signal completion by storing result marker
// ============================================================================
37 0E 00 00  // lui x24, 0x00000  → x24 = 0x00000000
13 0E 0E 20  // addi x24, x24, 0x200 → x24 = 0x00000200
93 0E E0 0D  // li x25, 0xDE
13 0F D0 0A  // li x26, 0xAD
23 20 96 01  // sw x25, 0(x24)    @ 0x00000200 (DONE marker)
23 22 A6 01  // sw x26, 4(x24)    @ 0x00000204

// Loop forever (or can stop here)
6f 00 00 00  // j 0 (infinite loop)

